@model IEnumerable<CoverType>





<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Cover Type List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="CoverType" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Cover Type
            </a>
        </div>

    </div>

    <br />


<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Cover Type Name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model){
            <tr>
                <td width="10%">
                    @obj.Id
                </td>
                 <td width="50%">
                    @obj.Name
                </td>
                <td>
                    <div class="w-150 btn-group" role="group">
                            <a asp-controller="CoverType" asp-action="Edit" asp-route-Id="@obj.Id" class="btn btn-primary"><i class="bi bi-pencil-square"></i>&nbsp;Edit</a>
                            &nbsp;<a asp-controller="CoverType" asp-action="Delete" asp-route-Id="@obj.Id" class="btn btn-danger"><i class="bi bi-trash"></i>&nbsp;Delete</a>
                        </div>
                    </td>
            </tr>
        }
    </tbody>

</table>
</div>